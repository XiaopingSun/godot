    "version": "2.0.0",
    "tasks": [
        {
            "label": "build editor",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
                "platform=macos",
                "target=editor",
                "vulkan_sdk_path=/Users/joker/Workspace/VulkanSDK/1.3.239.0",
                // "module_mono_enabled=yes", // support c#
                "dev_build=yes",
                "-j8"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build player",
            "group": "build",
            "type": "shell",
            "command": "scons",
            "args": [
                "platform=macos",
                "target=template_debug",
                "vulkan_sdk_path=/Users/joker/Workspace/VulkanSDK/1.3.239.0",
                // "module_mono_enabled=yes", // support c#
                "dev_build=yes",
                "-j8"
            ],
            "problemMatcher": "$msCompile"
        }
    ]
}